<Application x:Class="AlgoTreeDraw.App" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:local="clr-namespace:AlgoTreeDraw" 
             xmlns:Model="clr-namespace:AlgoTreeDraw.Model" 
             xmlns:View="clr-namespace:AlgoTreeDraw.View" 
             xmlns:ViewModel="clr-namespace:AlgoTreeDraw.ViewModel"
             StartupUri="View/MainWindow.xaml" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             d1p1:Ignorable="d" 
             xmlns:d1p1="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <Application.Resources>
        <DataTemplate DataType="{x:Type Model:BST}">
      <Canvas>
        <View:BSTUserControl />
      </Canvas>
    </DataTemplate>
    <DataTemplate DataType="{x:Type Model:RBT}">
      <Canvas>
        <View:RBTUserControl />
      </Canvas>
    </DataTemplate>
    <DataTemplate DataType="{x:Type Model:T234}">
      <Canvas>
        <View:T234UserControl />
      </Canvas>
    </DataTemplate>
        <DataTemplate DataType="{x:Type Model:Line}">
            <Canvas>
                <View:LineUserControl />
            </Canvas>
        </DataTemplate>
        <ViewModel:ViewModelLocator x:Key="Locator" />
    </Application.Resources>
</Application>