<Window x:Class="AlgoTreeDraw.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlgoTreeDraw"
        xmlns:View="clr-namespace:AlgoTreeDraw.View"
        xmlns:ViewModel="clr-namespace:AlgoTreeDraw.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <Window.DataContext>
        <ViewModel:MainViewModel />
    </Window.DataContext>

    <DockPanel>
        <View:MenuBar DockPanel.Dock="Top"/>
        <View:SidePanel DockPanel.Dock="Left"/>
        <Grid>
            <ItemsControl ItemsSource="{Binding LineViewModel.Lines}"/>
            <ItemsControl ItemsSource="{Binding NodeViewModel.BSTNodes}"/>
            <ItemsControl ItemsSource="{Binding NodeViewModel.RBTNodes}"/>
            
        </Grid>

    </DockPanel>
</Window>
