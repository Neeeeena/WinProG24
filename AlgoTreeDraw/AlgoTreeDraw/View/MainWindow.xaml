<Window x:Class="AlgoTreeDraw.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlgoTreeDraw"
        xmlns:View="clr-namespace:AlgoTreeDraw.View"
        xmlns:ViewModel="clr-namespace:AlgoTreeDraw.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900"
        DataContext="{Binding Source={StaticResource Locator}, Path=Main}">
    
    <DockPanel>
        <View:MenuBar DockPanel.Dock="Top"/> <!-- Draw Menu bar -->
        <View:SidePanel DataContext="{Binding Source={StaticResource Locator}, Path=SidePanel}" DockPanel.Dock="Left"/> <!-- Draw sidepanel -->
        <View:LineViewUserControl /> <!-- Draw lines -->
        <View:BstViewUserControl DataContext="{Binding Source={StaticResource Locator}, Path=Bst}" /> <!-- Draw Bst nodes -->
    </DockPanel>
</Window>
    
    
