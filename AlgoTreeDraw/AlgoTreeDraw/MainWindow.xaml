<Window x:Class="AlgoTreeDraw.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlgoTreeDraw"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <TextBlock
                Text="Who is the smartest in the group?  "
                TextAlignment="Left"
                FontSize="12"
                />
            <RadioButton GroupName="Names" Content="Alexander" Checked="RDChecked"/>
            <RadioButton GroupName="Names" Content="Carl" Checked="RDChecked"/>
            <RadioButton GroupName="Names" Content="Mathias" Checked="RDChecked"/>
            <RadioButton GroupName="Names" Content="Nina" Checked="RDChecked"/>
        </StackPanel>
        <Rectangle Fill="Bisque" Grid.Row="2"/>
        <Rectangle Fill="IndianRed" Grid.Row="3"/>

    </Grid>
</Window>
